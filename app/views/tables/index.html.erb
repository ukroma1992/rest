<h1 class="text-center">All Tables</h1>

<div class="row">
  <% @tables.each do |table| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Table number <%= table.number %></h3>
      </div>
      <div class="panel-body">
        <%= link_to "Reserve Table", reservations_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
